rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /usernames/{usernameLower} {
      allow read: if true;
      allow write: if false;
    }

    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }

    match /test/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
